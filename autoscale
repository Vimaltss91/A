import sys
import os

# Add the path to the third-party-dependencies directory
sys.path.append(os.path.join(os.path.dirname(__file__), '..', 'third-party-dependencies', 'ci_handler', 'modules', 'utility'))

# Now you can import the slack_notification module
from slack_notification import slack_post_notification

def main():
    message = "Hello, this is a test notification!"
    slack_post_notification(message)

if __name__ == "__main__":
    main()
