#!/usr/bin/env bash

# Target version
NEW_VERSION="25.1.100"

# Search and replace in all build.gradle files
find . -type f -name "build.gradle" | while read -r file; do
    echo "Updating $file"
    
    sed -i.bak \
        -e "s/\"CNECOMMON_VERSION\"/\"$NEW_VERSION\"/g" \
        -e "s/\"PCFCOMMON_VERSION\"/\"$NEW_VERSION\"/g" \
        -e "s/\"PCRFCOMMON_VERSION\"/\"$NEW_VERSION\"/g" \
        "$file"
done
