# slack_helper.py
import requests
import json
import logging

def slack_notification(message):
    """
    Sends a notification message to a Slack channel.
    
    Parameters:
        message (str): The message to be sent to the Slack channel.
    """
    try:
        slack_webhook_url = "https://hooks.slack.com/services/your/webhook/url"  # Replace with your actual Slack webhook URL
        slack_data = {
            "text": message
        }

        response = requests.post(
            slack_webhook_url, 
            data=json.dumps(slack_data), 
            headers={'Content-Type': 'application/json'}
        )

        if response.status_code != 200:
            logging.error(f"Failed to send Slack notification. Status code: {response.status_code}, Response: {response.text}")
        else:
            logging.info(f"Slack notification sent successfully: {message}")

    except Exception as e:
        logging.error(f"Error while sending Slack notification: {e}")
