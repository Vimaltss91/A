import requests
import json
import logging

def slack_notification(message, channel_id):
    """
    Sends a notification message to a Slack channel using Slack API and channel ID.

    Parameters:
        message (str): The message to be sent to the Slack channel.
        channel_id (str): The Slack channel ID where the message will be sent.
    """
    try:
        slack_token = "xoxb-your-slack-bot-token"  # Replace with your actual Slack Bot User OAuth Token
        slack_api_url = "https://slack.com/api/chat.postMessage"
        slack_data = {
            "channel": channel_id,
            "text": message
        }
        headers = {
            "Content-Type": "application/json",
            "Authorization": f"Bearer {slack_token}"
        }

        response = requests.post(
            slack_api_url, 
            data=json.dumps(slack_data), 
            headers=headers
        )

        if response.status_code != 200:
            logging.error(f"Failed to send Slack notification. Status code: {response.status_code}, Response: {response.text}")
        else:
            logging.info(f"Slack notification sent successfully to channel {channel_id}: {message}")

    except Exception as e:
        logging.error(f"Error while sending Slack notification: {e}")
